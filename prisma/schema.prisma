generator client {
  provider     = "prisma-client"
  output       = "../src/modules-system/prisma/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "mysql"
}

model Articles {
  id        Int       @id @default(autoincrement())
  title     String?   @db.VarChar(255)
  content   String?   @db.Text
  imageUrl  String?   @db.VarChar(255)
  views     Int?
  userId    Int
  isDeleted Boolean?  @default(false)
  createdAt DateTime? @db.DateTime(0)
  updatedAt DateTime? @db.DateTime(0)
  Users     Users     @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Articles_ibfk_1")

  @@index([userId], map: "userId")
}

model ChatGroups {
  id                Int                 @id @default(autoincrement())
  name              String?             @db.VarChar(255)
  ownerId           Int?
  isDeleted         Boolean             @default(false)
  createdAt         DateTime            @default(now()) @db.Timestamp(0)
  updatedAt         DateTime            @default(now()) @db.Timestamp(0)
  Users             Users?              @relation(fields: [ownerId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "ChatGroups_ibfk_1")
  ChatGroupsMembers ChatGroupsMembers[]
  ChatMessage       ChatMessage[]

  @@index([ownerId], map: "ownerId")
}

model ChatGroupsMembers {
  id          Int         @id @default(autoincrement())
  userId      Int?
  chatGroupId Int?
  isDeleted   Boolean     @default(false)
  createdAt   DateTime    @default(now()) @db.Timestamp(0)
  updatedAt   DateTime    @default(now()) @db.Timestamp(0)
  Users       Users?      @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "ChatGroupsMembers_ibfk_1")
  ChatGroups  ChatGroups? @relation(fields: [chatGroupId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "ChatGroupsMembers_ibfk_2")

  @@index([chatGroupId], map: "chatGroupId")
  @@index([userId], map: "userId")
}

model ChatMessage {
  id           Int        @id @default(autoincrement())
  messageText  String?    @db.Text
  userIdSender Int
  chatGroupId  Int
  isDeleted    Boolean    @default(false)
  createdAt    DateTime   @default(now()) @db.Timestamp(0)
  updatedAt    DateTime   @default(now()) @db.Timestamp(0)
  Users        Users      @relation(fields: [userIdSender], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "ChatMessage_ibfk_1")
  ChatGroups   ChatGroups @relation(fields: [chatGroupId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "ChatMessage_ibfk_2")

  @@index([chatGroupId], map: "chatGroupId")
  @@index([userIdSender], map: "userIdSender")
}

model Foods {
  id          Int      @id @default(autoincrement())
  name        String?  @db.VarChar(255)
  description String?  @db.VarChar(255)
  isDeleted   Boolean  @default(false)
  createdAt   DateTime @default(now()) @db.Timestamp(0)
  updatedAt   DateTime @default(now()) @db.Timestamp(0)
  Orders      Orders[]
}

model Orders {
  id        Int      @id @default(autoincrement())
  userId    Int?
  foodId    Int?
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now()) @db.Timestamp(0)
  updatedAt DateTime @default(now()) @db.Timestamp(0)
  Users     Users?   @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Orders_ibfk_1")
  Foods     Foods?   @relation(fields: [foodId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Orders_ibfk_2")

  @@index([foodId], map: "foodId")
  @@index([userId], map: "userId")
}

model Users {
  id                Int                 @id @default(autoincrement())
  email             String              @unique(map: "email") @db.VarChar(255)
  fullName          String?             @db.VarChar(255)
  avatar            String?             @db.VarChar(255)
  password          String?             @db.VarChar(255)
  googleId          String?             @db.VarChar(255)
  isDeleted         Boolean             @default(false)
  createdAt         DateTime            @default(now()) @db.Timestamp(0)
  updatedAt         DateTime            @default(now()) @db.Timestamp(0)
  Articles          Articles[]
  ChatGroups        ChatGroups[]
  ChatGroupsMembers ChatGroupsMembers[]
  ChatMessage       ChatMessage[]
  Orders            Orders[]
}
